@{
    ViewData["Title"] = "الدعم الفني";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background: url('/images/helpdesk-bg.jpg') center center / cover no-repeat;">
    <section class="content d-flex align-items-center justify-content-center"
             style="height: 100vh; background-color: rgba(0,0,0,0.7);">
        <div class="text-center text-white p-4 rounded"
             style="background-color: rgba(28,28,28,0.85); max-width: 600px;">

            <img src="/images/adlashelpdeskclogo.png" alt="Adlas Logo"
                 style="width: 150px; border-radius: 50%; border: 3px solid #EBDDC8; box-shadow: 0 0 20px #EBDDC8;" class=" mb-4 logo-animated logo-pulse" />

            <h2 class="mb-4" style="color: #E0E0E0;">
                @localizer["Get fast technical support for your issue"]<br />
                @localizer["Raise your ticket now"]
            </h2>

            <a href="/Ticket/Create"
               class="btn btn-lg rounded-pill px-5 mb-3"
               style="background-color: #EBDDC8; color: #1C1C1C; border: none; font-weight: bold;">
                <i class="fas fa-ticket-alt me-2"></i> @localizer["Open a ticket"]
            </a>

            <div>
                <a href="/Ticket/Inquiry"
                   style="color: #EBDDC8; text-decoration: underline; font-weight: 500;">
                    @localizer["Inquire about a ticket"]
                </a>
            </div>
        </div>
    </section>
</div>
